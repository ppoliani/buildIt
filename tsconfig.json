    "target": "es5",
    "module": "commonjs",
    "jsx" : "react",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "allowJs": true
  },
  "filesGlob": [
    "./typings/index.d.ts",
    "./global.d.t",
    "./src/**/*.tsx"
